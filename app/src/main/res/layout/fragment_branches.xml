<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zaita.aliyounes.gsbvc2017.fragments.BranchesFragment">
    <include
        layout="@layout/no_branches_layout"
        android:visibility="gone"
        android:id="@+id/relativeLayout_noBranches"/>
    <include
        layout="@layout/no_internet_layout"
        android:visibility="gone"
        android:id="@+id/relativeLayout_noInternet"/>
    <include
        layout="@layout/server_error_layout"
        android:visibility="gone"
        android:id="@+id/relativeLayout_serverError"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_loadingData"
        android:layout_gravity="center_horizontal|center_vertical"
        android:visibility="gone"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView_branches"/>
</FrameLayout>
